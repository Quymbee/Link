<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gimbal.hello_gimbal_android.WelcomeScreen"
    tools:layout_editor_absoluteY="25dp"
    >


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="500dp"
        android:layout_marginBottom="56dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <ImageButton
        android:id="@+id/Link_Logo_Button"
        android:layout_width="391dp"
        android:layout_height="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        android:contentDescription="Link NYC Logo"
        android:src="@drawable/link_nyclogo2"

        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="31dp"

        app:layout_constraintVertical_bias="0.413"
        app:srcCompat="@drawable/link_nyclogo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/Intersection_Logo_Button"
        android:layout_width="391dp"
        android:layout_height="219dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="Intersection Logo"

        android:scaleType="fitCenter"

        android:src="@drawable/logo_intersection"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_intersection"

        tools:layout_editor_absoluteY="131dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="360dp"
        android:layout_height="145dp"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/Welcome_Text"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="Welcome to LinkLocate!"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"

                android:textSize="50sp"

                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="359dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
